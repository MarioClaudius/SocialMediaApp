<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".start.register.RegisterFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/chat_logo_register"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_baseline_chat_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="24dp"/>

        <TextView
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:text="Register"
            android:textColor="@color/black"
            android:fontFamily="@font/nexa_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chat_logo_register"/>

        <TextView
            android:id="@+id/register_username_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:textSize="20sp"
            android:fontFamily="@font/nexa_bold"
            android:textColor="@color/black"
            android:layout_marginTop="40dp"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/register"/>

        <EditText
            android:id="@+id/register_username_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/stroke_box"
            android:layout_marginHorizontal="24dp"
            android:inputType="textEmailAddress"
            android:lines="1"
            android:hint="Enter your username here"
            android:textColor="@color/black"
            android:fontFamily="@font/nexa_light"
            android:padding="10dp"
            tools:text="johndoe"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/register_username_tv"/>

        <TextView
            android:id="@+id/register_email_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="20sp"
            android:fontFamily="@font/nexa_bold"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/register_username_edt"/>

        <EditText
            android:id="@+id/register_email_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/stroke_box"
            android:layout_marginHorizontal="24dp"
            android:inputType="textEmailAddress"
            android:lines="1"
            android:hint="Enter your email here"
            android:textColor="@color/black"
            android:fontFamily="@font/nexa_light"
            android:padding="10dp"
            tools:text="johndoe@gmail.com"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/register_email_tv"/>

        <TextView
            android:id="@+id/register_password_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="20sp"
            android:fontFamily="@font/nexa_bold"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/register_email_edt"/>

        <EditText
            android:id="@+id/register_password_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/stroke_box"
            android:layout_marginHorizontal="24dp"
            android:inputType="textPassword"
            android:lines="1"
            android:hint="Enter your password here"
            android:textColor="@color/black"
            android:fontFamily="@font/nexa_light"
            android:padding="10dp"
            tools:text="password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/register_password_tv"/>

        <Button
            android:id="@+id/register_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:text="register"
            android:layout_marginTop="75dp"
            android:backgroundTint="@color/main_green"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/register_password_edt"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>