<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/chat_bubble_cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/main_green"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_chat_bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="260dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="This is a message"
            android:fontFamily="@font/nexa_bold"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:00"
        android:textColor="#C0C0C0"
        android:fontFamily="@font/nexa_bold"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/chat_bubble_cardview"
        app:layout_constraintEnd_toStartOf="@id/chat_bubble_cardview"/>

</androidx.constraintlayout.widget.ConstraintLayout>