        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/success_or_fail_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:src="@drawable/success_logo"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/dialog_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                tools:text="Register Successful"
                android:textSize="30sp"
                android:fontFamily="@font/nexa_bold"
                tools:textColor="@color/main_green"
                app:layout_constraintTop_toBottomOf="@id/success_or_fail_logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/dialog_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="You have successfully register your account into application"
                android:textSize="16sp"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:fontFamily="@font/nexa_bold"
                app:layout_constraintTop_toBottomOf="@id/dialog_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginVertical="20dp"
                tools:text="OK"
                tools:backgroundTint="@color/main_green"
                app:cornerRadius="30dp"
                app:layout_constraintTop_toBottomOf="@id/dialog_subtitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

